<div class="image-index-button-container">  
  <%= link_to "Back to Main", '/', :class => 'btn btn-primary' %><hr>
  <%# if policy(@images).update? %>
    <%#= link_to "Delete ALL the pictures in this page!", '#', :class => 'btn btn-danger' %>
  <%# end %>
</div>

<div class="row">
  <% @images.each do |image| %>
    <div class="col-xs-12 col-sm-4 col-lg-3 col-xl-2" style="height: 350px">
      <div class="thumbnail">
        <%= link_to (image_tag image.file.variant(resize_to_limit: [200, 200])), "/images/#{image.id}" %>
        <div class="caption">
          <% if image.description %>
            <p><%= image.description %></p>
            <% else %>
            <p>No description available.</p>
          <% end %>
          <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if @page > 1 %>
    <li>
      <%= link_to "&laquo;".html_safe, "/images?page=#{(@page.pred)}" %>      
    </li>
    <% end %>
    <% 1.upto(@total_pages) do |page| %>
      <li>
      <%= link_to "#{page}", "/images?page=#{page}" %>
      </li>
    <% end %>
    <% if @page < @total_pages %>
    <li>
      <%= link_to "&raquo;".html_safe, "/images?page=#{(@page.next)}" %>
    </li>
    <% end %>
  </ul>
</nav>